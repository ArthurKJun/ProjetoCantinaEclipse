    <script>
    	
    function logar(){
    	event.preventDefault();
    	
    	let login = document.getElementById('login')
    	if(login.value == ''){
    		alert('Informe o login')
    		login.focus()
    		return
    	}
    	
    	let senha = document.getElementById('senha')
    	if(senha.value == ''){
    		alert('Informe a senha')
    		senha.focus()
    		return
    	}  
    	
    	document.location.href='<%="entrada.jsp"%>'
    	
    }
    
    
    </script>
    
